<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <!-- bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/menus.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/owner_jquery.js"></script>

  <!-- fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">

  <!-- scripts -->
  <script type="text/javascript" src="/scripts/app.js"></script>

   <!-- Add Icons -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
  <%- include('partials/_header', { user: user}) %>

<main class="main-container">
  <div class="login-header">
  <!-- <div class="left-container"> -->
  <span class="i-am"> I'm a...</span>
  <!-- Tab links -->
  <span class="tab">
    <button class="tablinks" onclick="openLogin(event, 'Customer')">Customer</button>
    <button class="tablinks" onclick="openLogin(event, 'Restaurant')">Restaurant Owner</button>
  </span>
  </div>
  <!-- Customer login -->
  <div id="Customer" class="tabcontent default">
    <div class="left-container">
      <div class="login-title">Customer Login</div>
      <form class="login-form" method="POST" action="/auth/login">
        <input value="customer@customer.com" name="email" class="email" type="email" placeholder="email">
        <input name="password" class="password" type="password" placeholder="password">
        <button class="submit" type="submit">Login</button>
      </form>

      <div>
        <a href="/auth/register">Register</a> for an account
      </div>
    </div>
    <div class="right-container">
      <i class="fa-solid fa-bacon icon3"></i>
      <i class="fa-solid fa-burger icon1"></i>
      <i class="fa-solid fa-bowl-food icon2"></i>
    </div>
  </div>
    <!-- Restaurant login -->
  <div id="Restaurant" class="tabcontent">
    <div class="left-container">
      <div class="login-title">Restaurant Login</div>
      <form class="login-form" method="POST" action="/auth/login">
        <input value="owner@owner.com" name="email" class="email" type="email" placeholder="email">
        <input name="password" class="password" type="password" placeholder="password">
        <button class="submit" type="submit">Login</button>
      </form>
    </div>
    <div class="right-container">
      <i class="fa-solid fa-bacon icon3"></i>
      <i class="fa-solid fa-burger icon1"></i>
      <i class="fa-solid fa-bowl-food icon2"></i>
    </div>
      </div>


</main>
</body>
</html>
