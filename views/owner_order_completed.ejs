<!DOCTYPE html>
<html lang="en">

<head>
  <!-- bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/owner_order_completed.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/owner_jquery.js"></script>
  <title>Owner</title>
</head>

<body>
  <%- include('partials/_header', { user: user }) %>
    <section class="view_orders">
      <% for (let order of orders) { %>
        <% if (order.order_completed_at) { %>
          <div class="each_order">
            <div class="order-<%= order.order_id %>">
              <div class="id_name">
                <div class="orderId">
                  #<%= order.order_id %>
                </div>
                <%= order.name %>
              </div>
              <div class="middle_part">
                <div class="placed_time">
                  <label>Completed at: </label>
                  <% const event=new Date(order.order_completed_at) %>
                    <%= event.toLocaleString('en-GB', { timeZone: 'UTC' }) %>
                </div>
                <div class="menu_total">
                  <div class="menu_part">
                  <label>Item Name</label>
                  <ul class="menu_name">
                    <% for (const itemName of order.menu_name) { %>
                      <li>
                        <%= itemName %>
                      </li>
                      <% } %>
                  </ul>
                </div>
                  <div class="total_part">
                    <lable>Total Number</lable>
                    <div class="total_items">
                      <%= order.total_items %>
                    </div>
                  </div>
                </div>
              </div>
                  <img src="https://img.icons8.com/material-rounded/24/undefined/rice-bowl.png" />
              </div>
            </div>
          </div>
          <% } %>
            <% } %>
    </section>
</body>

</html>
