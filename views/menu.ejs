<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">


    <!-- Custom scripts -->
    <script type="text/javascript" src="/scripts/menus.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <title>Menu</title>
  </head>
  <body>
    <%- include('partials/_header', { user: user}) %>
    <div class="menu-container">
      <div class="sidebar">
        <form class="place_order_form">
        <div>
          <label for="customer_name">Name: </label>
          <input type="text" class="password" name="customer_name" />
        </div>
        <div>
          <label for="customer_email">Email: </label>
          <input type="email" class="password" name="customer_email" />
        </div>
        <div>
          <label for="customer_phone_number">Phone number: </label>
          <input type="text" name="customer_phone_number" class="password"/>
          <button type="submit" class="submit">Place Order</button>
        </div>
        </form>
        <ul class="cart_items"></ul>
        <span>Total $<span class="cart_total">0</span></span>
      </div>
      <div class="d-flex flex-column">
        <% for(let menu of menus) { %>
        <div class="menu_item m-1 d-flex">
          <img
            class="menu_item_photo mr-2"
            src="<%= menu.photo_url %>"
            alt=""
          />
          <div class="d-flex flex-column">
            <div style="display: none" class="menu_item_id"><%= menu.id %></div>
            <div class="menu_item_name"><%= menu.name%></div>
            <div class="menu_item_description"><%= menu.description%></div>
            <div class="menu_item_footer d-flex">
              <div class="pt-2">$</div>
              <div class="menu_item_price pt-2"><%= menu.price / 100 %></div>
              <div class="d-flex flex-row align-items-center item_counter">
                <div class="subtract p-2">-</div>
                <div class="count">0</div>
                <div class="add p-2">+</div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
