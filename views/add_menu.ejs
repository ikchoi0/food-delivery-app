<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <!-- bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/menus.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>
<body>
  <%- include('partials/_header') %>
  <form class="create_menu" action="/api/owner/menu" method="POST">
    <div class="form-group">
      <label for="create_menu_name">Menu Name</label>
      <input type="text" class="form-control create_menu_name" name="create_menu_name">
    </div>
    <div class="form-group">
      <label for="create_menu_photo_url">Photo</label>
      <input placeholder="Please enter an URL for photo" type="text" class="form-control create_menu_photo_url" name="create_menu_photo_url">
    </div>
    <div class="form-group">
      <label for="create_menu_description">Description</label>
      <textarea class="form-control create_menu_description" rows="5" name="create_menu_description"></textarea>
    </div>
    <div class="form-group">
      <label for="create_menu_price">Price</label>
      <input type="text" class="form-control create_menu_price" name="create_menu_price">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</body>
</html>
