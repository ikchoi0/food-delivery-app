<body>
  <%- include('partials/_header') %>
  <div class="menu_title"><img src="https://img.icons8.com/external-gliphyline-royyan-wijaya/64/undefined/external-eat-heiyo-food-collections-glyph-gliphyline-royyan-wijaya-5.png"/> &nbsp; Add a new menu item:</div>
  <form class="create_menu" action="/api/owner/menu" method="POST">
    <div class="form-group">
      <label for="create_menu_name" class="menu-label">Item Name</label>
      <input type="text" class="form-control create_menu_name menu_name" name="create_menu_name">
    </div>
    <div class="form-group">
      <label for="create_menu_photo_url" class="menu-label">Photo</label>
      <input placeholder="Please enter a URL for photo" type="text" class="form-control create_menu_photo_url menu_photo" name="create_menu_photo_url">
    </div>
    <div class="form-group">
      <label for="create_menu_description" class="menu-label">Description</label>
      <textarea class="form-control create_menu_description menu_description" name="create_menu_description" rows="5" name="create_menu_description"></textarea>
    </div>
    <div class="form-group">
      <label for="create_menu_price" class="menu-label">Price (e.g. 12.50)</label>
      <div class="form-submit">
      <input type="text" class="form-control create_menu_price menu_price" name="create_menu_price">
      <div><button type="submit" class="btn btn-primary create-btn">Create</button></div>
    </div>
    </div>
  </form>
</body>
